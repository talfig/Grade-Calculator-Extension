{
  "manifest_version": 3,
  "name": "Grade Average Calculator",
  "version": "1.0",
  "description": "Calculates the weighted grade average on the university grade summary page.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Calculate Grade Average"
  },
  "content_scripts": [
    {
      "matches": ["<URL_of_the_grade_summary_page>"],
      "js": ["content.js"]
    }
  ]
}
