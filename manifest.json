{
  "manifest_version": 3,
  "name": "Grade Average Calculator",
  "version": "1.0",
  "description": "Calculates the weighted grade average on the university grade summary page.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Calculate Grade Average"
  },
  "content_scripts": [
    {
      "matches": ["https://sheilta.apps.openu.ac.il/student360/Home/StudiesPlans/"], 
      "js": ["content.js"]
    }
  ]
}
