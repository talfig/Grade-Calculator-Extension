{
  "manifest_version": 3,
  "name": "University Grade Average Calculator",
  "version": "1.0",
  "description": "Calculates the average of a student's grades from their university grade summary.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Calculate GPA"
  },
  "content_scripts": [
    {
      "matches": ["https://your-university-website.com/*"],
      "js": ["content.js"]
    }
  ]
}
